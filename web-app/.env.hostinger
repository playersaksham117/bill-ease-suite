# Hostinger Deployment Configuration
# Copy this file to .env.local when deploying to Hostinger

# Database Configuration (MySQL)
DB_HOST=localhost
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=billease_suite
DB_PORT=3306

# NextAuth Configuration
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=generate-a-random-32-char-secret-here

# JWT Secret (for additional token signing)
JWT_SECRET=another-random-secret-for-jwt-tokens

# App Configuration
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXT_PUBLIC_API_URL=https://yourdomain.com/api

# File Upload Configuration (local storage)
UPLOAD_DIR=/home/your_username/public_html/uploads
MAX_FILE_SIZE=5242880

# Email Configuration (optional - for password resets)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@yourdomain.com

# Demo Mode (set to false in production)
DEMO_MODE=true
MAX_DEMO_USERS=10

# =====================================================
# SETUP INSTRUCTIONS:
# =====================================================
# 1. Create MySQL database in Hostinger cPanel
# 2. Import database-hostinger.sql file
# 3. Update DB credentials above
# 4. Generate secrets: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# 5. Set NEXTAUTH_URL to your domain
# 6. Build: npm run build
# 7. Upload to public_html via FTP or File Manager
# 8. Ensure Node.js app is configured in Hostinger panel
